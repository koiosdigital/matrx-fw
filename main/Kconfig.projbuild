menu "MATRX hardware configuration"

    orsource "$IDF_PATH/examples/common_components/env_caps/$IDF_TARGET/Kconfig.env_caps"

    choice BLINK_LED
        prompt "PCB type"
        default HW_MATRX_V9
        help
            Select the PCB type

        config HW_MATRX_V9
            bool "MATRX v9"
        config HW_MATRX_V8
            bool "MATRX v8"
        config HW_TIDBYT_V1
            bool "TIDBYT v1"
        config HW_TIDBYT_V2
            bool "TIDBYT v2"
    endchoice

    config HW_TYPE
        int
        default 0
        help
            The HW_TYPE is used to identify the PCB type.
            0 = MATRIX v9
            1 = MATRIX v8
            2 = TIDBYT v1
            3 = TIDBYT v2
        default 0 if HW_MATRX_V9
        default 1 if HW_MATRX_V8
        default 2 if HW_TIDBYT_V1
        default 3 if HW_TIDBYT_V2
        depends on HW_MATRX_V9 || HW_MATRX_V8 || HW_TIDBYT_V1 || HW_TIDBYT_V2

    choice MATRIX_SIZE
        prompt "LED matrix size"
        default MATRIX_SIZE_32x16
        help
            Select the size of the LED matrix
        config MATRIX_SIZE_32x16
            bool "32x16"
        config MATRIX_SIZE_128x64
            bool "128x64"
        config MATRIX_SIZE_64x64
            bool "64x64"
    endchoice

    config MATRIX_WIDTH
        int
        default 32 if MATRIX_SIZE_32x16
        default 128 if MATRIX_SIZE_128x64
        default 64 if MATRIX_SIZE_64x64
        help
            The width of the LED matrix in pixels.
            32 = 32 pixels wide
            128 = 128 pixels wide
            64 = 64 pixels wide
        depends on MATRIX_SIZE_32x16 || MATRIX_SIZE_128x64 || MATRIX_SIZE_64x64

    config MATRIX_HEIGHT
        int
        default 16 if MATRIX_SIZE_32x16
        default 64 if MATRIX_SIZE_128x64
        default 64 if MATRIX_SIZE_64x64
        help
            The height of the LED matrix in pixels.
            16 = 16 pixels high
            64 = 64 pixels high
        depends on MATRIX_SIZE_32x16 || MATRIX_SIZE_128x64 || MATRIX_SIZE_64x64

endmenu
